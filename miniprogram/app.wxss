/* 容器样式 */
.container {
  padding: 32rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 32rpx;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

/* 格式选择网格 */
.format-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.format-item {
  background: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.format-item.selected {
  background: #007bff;
  border-color: #007bff;
  color: white;
}

.format-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 文件列表样式 */
.file-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  /* 关键：确保内容溢出时布局稳定 */
  justify-content: space-between;
}

.file-info {
  flex: 1;
  /* 关键：允许 flex 子项收缩到 0，防止长文本撑开容器 */
  min-width: 0;
  margin-right: 20rpx; /* 增加与按钮组的间距 */
}

.file-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  /* 关键：单行截断 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-actions {
  /* 关键：防止按钮组被压缩 */
  flex-shrink: 0;
  text-align: right;
}

.status-badge {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  margin-bottom: 8rpx;
}

.status-processing {
  background: #fff3cd;
  color: #856404;
}

.status-success {
  background: #d1edff;
  color: #0c5460;
}

.status-error {
  background: #f8d7da;
  color: #721c24;
}

.action-row {
  display: flex;
  gap: 12rpx;
  justify-content: flex-end; /* 靠右对齐 */
}

.action-row button {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  margin: 0 !important; /* 清除默认 margin */
  line-height: 1.5;
  white-space: nowrap; /* 按钮文字不换行 */
}

/* 进度条样式 */
.progress-container {
  margin-top: 16rpx;
}

.progress-bar {
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #007bff, #0056b3);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  text-align: center;
}

/* 按钮样式 */
.btn-primary {
  background: #007bff;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.btn-success {
  background: #28a745;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  width: 100%;
}

/* 预览模态框 */
.preview-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.preview-content {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  max-width: 80%;
  text-align: center;
}

.preview-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.close-preview-btn {
  background: #6c757d;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
}

.muted {
  font-size: 24rpx;
  color: #6c757d;
  text-align: center;
}

.no-targets {
  grid-column: 1 / -1;
  text-align: center;
  padding: 48rpx;
}
