<!--pages/index/index.wxml-->
<view class="container">
  <view class="header">
    <view class="title">全能格式转换</view>
    <view class="subtitle">支持文档、音频、图片、视频等多种格式转换</view>
  </view>

  <view class="category-grid">
    <view wx:for="{{categories}}" wx:key="id" class="category-card" bindtap="navigateToCategory" data-url="{{item.url}}">
      <view class="category-icon">{{item.icon}}</view>
      <view class="category-name">{{item.name}}</view>
      <view class="category-desc">{{item.description}}</view>
    </view>
  </view>

  <view class="format-section">
    <view class="section-title">支持格式</view>
    <view class="format-tags">
      <view class="format-tag">PDF</view>
      <view class="format-tag">DOC/DOCX</view>
      <view class="format-tag">XLS/XLSX</view>
      <view class="format-tag">PPT/PPTX</view>
      <view class="format-tag">TXT</view>
      <view class="format-tag">MP3</view>
      <view class="format-tag">WAV</view>
      <view class="format-tag">AAC</view>
      <view class="format-tag">FLAC</view>
      <view class="format-tag">JPG/PNG</view>
      <view class="format-tag">WebP</view>
      <view class="format-tag">MP4</view>
      <view class="format-tag">AVI</view>
      <view class="format-tag">MOV</view>
      <view class="format-tag">等更多格式</view>
    </view>
  </view>
</view>
